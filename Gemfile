  gem 'rspec-rails'
  gem "factory_girl_rails"
  gem "faker"
  gem "capybara"
  gem "capybara-webkit"
  gem "guard-rspec"
  gem "growl"
  gem "launchy"
  gem 'database_cleaner'
  gem 'shoulda-matchers'
  gem 'pdf-inspector'
  gem 'cover_me'
end

group :production do
  gem 'mysql'
end

