.section
  %h1.section-header New Car

  .section-body
    = simple_form_for @car, :html => { :class => "form-vertical" } do |f|
      %fieldset
        %legend Step 1: Enter VIN
        = f.input :vin

      .form-actions
        = f.submit "Next", :class => "btn btn-primary"
        = link_to "Cancel", cars_path, :class => "btn"
