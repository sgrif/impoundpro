.section
  %h1.section-header New Car

  .section-body
    = simple_form_for @car, :html => { :class => "form-vertical" } do |f|
      - if vin_check_errors = @car.errors.delete(:check_vin) and @car.errors.empty?
        .alert.alert-block
          %h4 Invalid VIN
          %p
            The VIN you entered appears to be invalid. It's possible, though unlikely that this vehicle
            does not conform to VIN standards. Please double check that you entered the VIN correctly.
            If you're sure these errors do not apply, click the button below.
          %p.vin-check-errors
            %ul
              - vin_check_errors.each do |e|
                %li= e
          %p.vin-check-actions
            =f.submit "I'm sure. Ignore these errors.", :name => "override_check_vin", :class => "btn btn-warning"
      %fieldset
        %legend Step 1: Enter VIN
        = f.input :vin

      .form-actions
        = f.submit "Next", :class => "btn btn-primary", :id => "new_car_submit"
        = link_to "Cancel", cars_path, :class => "btn"
