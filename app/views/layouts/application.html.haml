!!! 5
%html
  %head
    %title Tyler
    =stylesheet_link_tag "application", :media => "all"
    =javascript_include_tag "https://js.stripe.com/v1/stripe-debug.js", "application"
    =csrf_meta_tags
    =tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY
  %body{:class => controller.controller_name}
    -if flash[:alert]
      %p#alert= flash[:alert]
    -if flash[:error]
      %p#error= flash[:error]
    -if flash[:notice]
      %p#notice= flash[:notice]

    != yield
