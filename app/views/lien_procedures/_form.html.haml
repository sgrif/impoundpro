= simple_form_for(@lien_procedure, url: @lien_procedure.new_record? ? car_lien_procedures_path(@car) : car_lien_procedure_path(@car, @lien_procedure)) do |f|
  = f.error_notification

  .form-inputs
    = f.input :date_towed
    = f.input :tow_requester
    = f.input :tow_reason
    = f.input :driver_name
    = f.input :driver_address
    = f.input :driver_city
    = f.input :driver_state
    = f.input :driver_zip

  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to "Back", :back, class: 'btn'
