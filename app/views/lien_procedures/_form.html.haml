= simple_form_for(@lien_procedure, url: @lien_procedure.new_record? ? car_lien_procedures_path(@car) : car_lien_procedure_path(@car, @lien_procedure)) do |f|
  = f.error_notification

  .form-inputs
    - @lien_procedure.completed_steps.each do |step|
      = f.input step, start_year: 1.year.ago.year, end_year: Date.today.year
    = f.input @lien_procedure.next_step, include_blank: !@lien_procedure.new_record? ,
      start_year: 1.year.ago.year, end_year: Date.today.year

  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to "Back", @car, class: 'btn'
