=simple_form_for :login do |f|
  %fieldset
    %h3.form-header Please Log In
    .form-content
      =f.input :email, :required => false
      =f.input :password, :required => false, :hint => link_to("Forgot Password?", new_password_reset_path)
      =f.input :remember_me, :as => :boolean, :inline_label => true, :label => false
    .form-actions
      =f.submit "Login", :class =>  "btn btn-primary btn-large"
      =link_to "Sign Up", new_user_path, :class => "btn btn-success btn-large"
