.row
  .container.ac.brand
    %h1= link_to "Impound Pro", root_path
  .span4.offset4
    = render :partial => "shared/display_flash"
    = simple_form_for :login do |f|
      %fieldset
        %h3 Please Log In
        .form-content
          = f.input :email, :required => false, :hint => link_to("New User?", new_user_path)
          = f.input :password, :required => false, :hint => link_to("Forgot Password?", new_password_reset_path)
          .actions
            = f.submit "Login", :class =>  "btn btn-primary btn-large"
            = check_box_tag :remember_me
            = label_tag :remember_me, "Remember me?"
