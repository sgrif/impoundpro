.row
  .span4.offset4
    = form_tag do
      %fieldset
        %legend
          %h3 Please Log In
        .field
          = label_tag :email
          = text_field_tag :email, params[:email], :class => "span3"
        .field
          = label_tag :password
          = password_field_tag :password, params[:password], :class => "span3"
        .actions
          = submit_tag "Login"
          = check_box_tag :remember_me, 1, params[:email]
          = label_tag :remember_me
    = link_to "Register", new_user_path |
    = link_to "Forgot Password", new_password_reset_path
