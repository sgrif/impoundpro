- if flash[:error]
  .alert.alert-error.alert-block
    %button.close{:data => {:dismiss => "alert"}}
      %i.icon-remove
    %h4= flash[:error_title] || "Error!"
    = flash[:error]
- if flash[:notice]
  .alert.alert-info
    %button.close{:data => {:dismiss => "alert"}}
      %i.icon-remove
    = flash[:notice]
- if flash[:alert]
  .alert
    %button.close{:data => {:dismiss => "alert"}}
      %i.icon-remove
    = flash[:alert]
